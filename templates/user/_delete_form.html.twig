<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Weet u zeker dat u deze gebruiker wilt verwijderen?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger">Verwijderen</button>
</form>
