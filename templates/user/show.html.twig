{% extends 'medewerker.html.twig' %}

{% block title %}User{% endblock %}

{% block content %}
    <a href="{{ path('user_index') }}">gebruikersoverzicht</a>

    <h1>Gebruiker</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Voorletters</th>
                <td>{{ user.voorletters }}</td>
            </tr>
            <tr>
                <th>Tussenvoegsel</th>
                <td>{{ user.tussenvoegsel }}</td>
            </tr>
            <tr>
                <th>Achternaam</th>
                <td>{{ user.achternaam }}</td>
            </tr>
            <tr>
                <th>Adres</th>
                <td>{{ user.adres }}</td>
            </tr>
            <tr>
                <th>Postcode</th>
                <td>{{ user.postcode }}</td>
            </tr>
            <tr>
                <th>Telefoon</th>
                <td>{{ user.telefoon }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
