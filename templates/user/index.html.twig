{% extends 'medewerker.html.twig' %}

{% block title %}User index{% endblock %}

{% block content %}
    <h1>Lijst met gebruikers</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Roles</th>
                <th>Voorletters</th>
                <th>Tussenvoegsel</th>
                <th>Achternaam</th>
                <th>Adres</th>
                <th>Postcode</th>
                <th>Telefoon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.voorletters }}</td>
                <td>{{ user.tussenvoegsel }}</td>
                <td>{{ user.achternaam }}</td>
                <td>{{ user.adres }}</td>
                <td>{{ user.postcode }}</td>
                <td>{{ user.telefoon }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a><br>
                    <a href="{{ path('user_reset_password', {'id': user.id}) }}">Reset password</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
